<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="eth.bruises.sys.mapper.RoleMapper">
    <!--保存对象-->
    <insert id="add" parameterType="Role" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
                                            <if test="name != null">
                            name,
                        </if>
                                            <if test="sn != null">
                            sn,
                        </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
                                            <if test="name != null">
#{name}                            ,
                        </if>
                                            <if test="sn != null">
#{sn}                            ,
                        </if>
        </trim>
    </insert>
    <!--删除对象-->
    <delete id="delete" parameterType="long">
        delete from t_role where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="Role">
        update t_role
        <set>
                                            <if test="name != null">
                            name = #{name},
                        </if>
                                            <if test="sn != null">
                            sn = #{sn}                        </if>
        </set>
        where id = #{id}
    </update>
    <!--查找单个对象-->
    <select id="selectOne" resultMap="BaseResultMap" parameterType="long">
        select * from t_role where id = #{id}
    </select>
    <!--查找所有对象-->
    <select id="selectAll" resultMap="BaseResultMap">
        select * from t_role
    </select>
    <!--查询总数=参数（查询对象），返回值：long-->
    <select id="queryByCount" parameterType="RoleQuery" resultType="integer">
        select count(*) from t_role
        <include refid="whereSql"/>
    </select>
    <!--查询当前页数据=参数（查询对象），返回值:List-->
    <select id="queryByPage" parameterType="RoleQuery" resultMap="BaseResultMap">
        select * from t_role
        <include refid="whereSql"/>
        limit #{begin},#{pageSize}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--批量删除-->
    <delete id="batchDel" parameterType="arraylist">
        delete from t_role where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="sn" property="sn" />
    </resultMap>



    <delete id="deleteRoleMenu">
        delete
        from t_role_menu
        where role_id = #{id}
    </delete>

    <delete id="deleteRolePermission">
        delete
        from t_role_permission
        where role_id = #{id}
    </delete>
    <delete id="batchDelRoleMenu">
        delete
        from t_role_menu
        where role_id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <delete id="batchDelRolePermission">
        delete
        from t_role_permission
        where role_id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <!--
collection：有三种取值方式
    传递的是数据：array
    传递的是集合：list
    如果参数是多个值，集合有别名，那么是集合的别名
-->
    <insert id="batchRoleMenu">
        insert into t_role_menu (role_id, menu_id)
        values
        <foreach collection="menuIds" item="menuId" separator=",">
            (#{id}, #{menuId})
        </foreach>
    </insert>

    <insert id="batchRolePermission">
        insert into t_role_permission (role_id, permission_id)
        values
        <foreach collection="permissionIds" item="permissionId" separator=",">
            (#{id}, #{permissionId})
        </foreach>
    </insert>

</mapper>
